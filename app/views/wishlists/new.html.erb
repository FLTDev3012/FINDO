<h1>new wishlist</h1>
<h2>cree une wishlist</h2>

<div data-controller= "tag-selection">

  <%# formulaire  %>
  <%= form_tag wishlists_path do %>

    <% @first_tag.each do |tag| %>
      <div data-action= "click->tag-selection#firstcheck" data-tag-selection-target="first"><%= check_box_tag tag.name, true, false, class:'bestdnone'%>
      <%= tag.name %></div>
    <% end %>

    <% @second_tag.each do |tag| %>
      <div data-action= "click->tag-selection#secondcheck" data-tag-selection-target="second" class="d-none"><%= check_box_tag tag.name, true, false, class: 'bestdnone'%>
      <%= tag.name %></div>
    <% end %>

    <div>
      <% @third_tag.each do |tag| %>
        <div data-action= "click->tag-selection#thirdcheck" data-tag-selection-target="third" class="d-none"><%= check_box_tag tag.name, true, false, class: 'bestdnone'%>
        <%= tag.name %></div>
      <% end %>
      <p data-action= "click->tag-selection#thirdbuttoncheck" data-tag-selection-target="thirdbutton"  class="d-none">Suivant</p>
    </div>

    <% @fourth_tag.each do |tag| %>
      <div data-action= "click->tag-selection#fourthcheck" data-tag-selection-target="fourth" class="d-none"><%= check_box_tag tag.name, true, false, class: 'bestdnone'%>
        <%= tag.name %>
      </div>
    <% end %>

    <div data-tag-selection-target="five" class="d-none">
      <%= label_tag :wishlist_name, "Nom de la wishlist"%>
      <%= text_field_tag :wishlist_name %>

        <%= submit_tag "Nouvelle Wishlist" %>

    </div>



  <% end %>

  <div class="range_container" data-action="mousemove->tag-selection#changerange">
    <div class="sliders_control">
        <input id="fromSlider" type="range" value="20" min="0" max="300"/>
        <input id="toSlider" type="range" value="60" min="0" max="300"/>
    </div>
    <div class="form_control">
        <div class="form_control_container">
            <!-- on met le notre nouveau resultat min basÃ© sur rangeinput min qui est plus bas  -->
            <p data-tag-selection-target="rangeresultmin"></p>
            <div class="form_control_container__time">Min</div>
            <!-- rangeinput min moche de base  -->
            <input class="form_control_container__time__input d-none" type="number" id="fromInput" value="20" min="0" max="300" data-tag-selection-target="rangeinputmin"/>
        </div>
        <div class="form_control_container">
            <p data-tag-selection-target="rangeresultmax"></p>
            <div class="form_control_container__time">Max</div>
            <input class="form_control_container__time__input d-none" type="number" id="toInput" value="60" min="0" max="300" data-tag-selection-target="rangeinputmax"/>
        </div>
    </div>
</div>


</div>
